<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lv_aler_calendar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorAccent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_aler_calendar_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_aler_calendar_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_aler_calendar_day"
                android:layout_marginLeft="10dp"
                android:text="04-2017"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/tv_aler_calendar_dayweek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_aler_calendar_month"
                android:layout_toRightOf="@+id/tv_aler_calendar_day"
                android:layout_marginLeft="10dp"
                android:text="Friday"
                android:textSize="10dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_aler_calendar_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:layout_marginLeft="100dp"/>

        <TextView
            android:id="@+id/tv_aler_calendar_expenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:layout_marginLeft="70dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_aler_calendar_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_aler_calendar_title"
        android:layout_marginTop="15dp">
        <ListView
            android:id="@+id/lv_aler_calendar_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>
    </RelativeLayout>

</RelativeLayout>