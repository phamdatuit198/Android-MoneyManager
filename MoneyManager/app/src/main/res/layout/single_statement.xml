<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/dodgerblue">
        <RelativeLayout
            android:id="@+id/rl_single_list_one"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp">
            <TextView
                android:id="@+id/tv_single_list_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="catelory"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/tv_single_list_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="contents"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/tv_single_list_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_single_list_contents"
                android:textSize="10dp"
                android:textStyle="italic"
                android:textColor="@color/colorBlack"
                android:text="account"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_single_list_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colororange"
            android:textStyle="bold"
            android:textSize="12dp"/>
    </LinearLayout>
</LinearLayout>